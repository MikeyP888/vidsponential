{
  "buildCommand": "echo 'No build needed - static site'",
  "outputDirectory": ".",
  "rewrites": [
    { "source": "/", "destination": "/pages/site/index.html" },
    { "source": "/services", "destination": "/pages/site/services.html" },
    { "source": "/portfolio", "destination": "/pages/site/portfolio.html" },
    { "source": "/book", "destination": "/pages/site/book.html" },
    { "source": "/about", "destination": "/pages/site/about.html" },
    { "source": "/contact", "destination": "/pages/site/contact.html" },
    { "source": "/newsletter", "destination": "/pages/marketing/newsletter_signup.html" },
    { "source": "/terms", "destination": "/pages/marketing/terms-and-conditions.html" },
    { "source": "/privacy", "destination": "/pages/marketing/privacy-policy.html" },
    { "source": "/admin", "destination": "/pages/home.html" },
    { "source": "/admin/", "destination": "/pages/home.html" },
    { "source": "/admin/:path*", "destination": "/pages/admin/:path*" },
    { "source": "/app/:path*", "destination": "/pages/user-pages/:path*" },
    { "source": "/:path*", "destination": "/:path*.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
