{
  "buildCommand": "echo 'No build needed - static site'",
  "outputDirectory": ".",
  "rewrites": [
    { "source": "/", "destination": "/pages/home.html" },
    { "source": "/site", "destination": "/pages/site/index.html" },
    { "source": "/site/", "destination": "/pages/site/index.html" },
    { "source": "/site/:path*", "destination": "/pages/site/:path*" },
    { "source": "/privacy-policy", "destination": "/pages/marketing/privacy-policy.html" },
    { "source": "/terms-and-conditions", "destination": "/pages/marketing/terms-and-conditions.html" },
    { "source": "/:path*", "destination": "/:path*.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
